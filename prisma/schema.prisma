// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model recurringEvent {
  id          Int     @id @default(autoincrement())
  title       String
  shortTitle  String?
  description String?
  furtrackTag String?
  country     String
  links       String?
  events      event[]
}

model event {
  id               Int            @id @default(autoincrement())
  title            String
  shortTitle       String?
  furtrackTag      String?
  date             DateTime
  recurringEventId Int
  recurringEvent   recurringEvent @relation(fields: [recurringEventId], references: [id])
  videos           video[]
}

model maker {
  id          Int     @id @default(autoincrement())
  name        String
  links       String?
  country     String
  videos      video[]
}

model songArtist {
  id     Int    @id @default(autoincrement())
  name   String
  songs  song[]
}

model song {
  id          Int            @id @default(autoincrement())
  title       String
  artistId    Int
  artist      songArtist     @relation(fields: [artistId], references: [id])
  videos      videoSong[]
}

model video {
  id          Int            @id @default(autoincrement())
  title       String
  eventId     Int?
  event       event?         @relation(fields: [eventId], references: [id])
  makerId     Int
  maker       maker          @relation(fields: [makerId], references: [id])
  url         String
  date        DateTime
  songs       videoSong[]
}

model videoSong {
  id      Int   @id @default(autoincrement())
  videoId Int
  songId  Int
  video   video @relation(fields: [videoId], references: [id])
  song    song  @relation(fields: [songId], references: [id])
}